// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
  output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
  // NOTE: When using mysql or sqlserver, uncomment the @db.Text annotations in model Account below
  // Further reading:
  // https://next-auth.js.org/adapters/prisma#create-the-prisma-schema
  // https://www.prisma.io/docs/reference/api-reference/prisma-schema-reference#string
  url      = env("DATABASE_URL")
}

model System {
  id           String   @id @default(cuid())
  name         String
  displayOrder Int      @default(0)
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt

  createdBy   User   @relation(fields: [createdById], references: [id], onDelete: Cascade)
  createdById String

  parameters     SystemParameter[]
  activities     SystemActivity[]
  filterMedia    FilterMedia[]
  sharedAccesses SystemSharedAccess[]

  @@index([createdById])
  @@index([createdById, displayOrder])
  @@index([name])
}

model SystemSharedAccess {
  id        Int      @id @default(autoincrement())
  email     String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  system   System @relation(fields: [systemId], references: [id], onDelete: Cascade)
  systemId String

  @@unique([systemId, email])
  @@index([systemId, email])
}

model FilterMedia {
  id                      Int       @id @default(autoincrement())
  name                    String
  addedAt                 DateTime
  lastReplacedAt          DateTime?
  replacementIntervalDays Int?
  createdAt               DateTime  @default(now())
  updatedAt               DateTime  @updatedAt

  system   System @relation(fields: [systemId], references: [id], onDelete: Cascade)
  systemId String

  @@index([systemId, id])
  @@index([systemId, addedAt])
}

enum SystemActivityType {
  SYSTEM_CREATED
  PARAMETER_LOGGED
  WATER_CHANGE_LOGGED
  SUPPLEMENT_DOSED
  NOTE_LOGGED
  FILTER_MEDIA_ADDED
  FILTER_MEDIA_REPLACED
  FILTER_MEDIA_REMOVED
}

model SystemActivity {
  id        Int                @id @default(autoincrement())
  type      SystemActivityType
  createdAt DateTime           @default(now())
  loggedAt  DateTime?
  value     Float?
  note      String?
  unit      String?
  product   String?

  system   System @relation(fields: [systemId], references: [id], onDelete: Cascade)
  systemId String

  parameter   SystemParameter? @relation(fields: [parameterId], references: [id], onDelete: SetNull)
  parameterId Int?

  @@index([systemId, id])
  @@index([systemId, createdAt])
}

model SystemParameter {
  id              Int      @id @default(autoincrement())
  fullName        String
  abbreviatedName String
  unit            String
  showOnOverview  Boolean  @default(true)
  displayDecimals Int      @default(1)
  lowerBound      Float
  upperBound      Float
  displayOrder    Int      @default(0)
  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt

  system   System @relation(fields: [systemId], references: [id], onDelete: Cascade)
  systemId String

  logs             SystemParameterLog[]
  systemActivities SystemActivity[]

  @@unique([systemId, abbreviatedName])
  @@index([systemId, displayOrder])
}

model SystemParameterLog {
  id        Int      @id @default(autoincrement())
  value     Float
  loggedAt  DateTime @default(now())
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  parameter   SystemParameter @relation(fields: [parameterId], references: [id], onDelete: Cascade)
  parameterId Int

  @@index([parameterId, loggedAt])
}

// Necessary for Next auth
model Account {
  id                       String  @id @default(cuid())
  userId                   String
  type                     String
  provider                 String
  providerAccountId        String
  refresh_token            String? // @db.Text
  access_token             String? // @db.Text
  expires_at               Int?
  token_type               String?
  scope                    String?
  id_token                 String? // @db.Text
  session_state            String?
  user                     User    @relation(fields: [userId], references: [id], onDelete: Cascade)
  refresh_token_expires_in Int?

  @@unique([provider, providerAccountId])
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model User {
  id            String    @id @default(cuid())
  name          String?
  email         String?   @unique
  emailVerified DateTime?
  image         String?
  accounts      Account[]
  sessions      Session[]
  systems       System[]
}

model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
}
